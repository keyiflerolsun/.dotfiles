{
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.fontFamily": "'JetBrainsMono Medium Nerd Font', 'MesloLGS NF', 'Hack Nerd Font', 'SourceCodePro+Powerline+Awesome Regular', 'Droid Sans Mono', 'monospace', 'Droid Sans Fallback'",
    "terminal.integrated.rendererType": "dom",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.lineHeight": 1,
    // "terminal.integrated.letterSpacing": 2,
    "terminal.external.linuxExec": "truecolor",

    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs":"active",
    "editor.fontSize": 16,
    "editor.largeFileOptimizations": false,
    "editor.fontFamily": "'JetBrainsMono Nerd Font', 'Droid Sans Mono', 'monospace', 'Droid Sans Fallback'",
    "editor.linkedEditing": true,
    "editor.inlineSuggest.enabled": true,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": false,

    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Dracula",

    // "python.analysis.inlayHints.functionReturnTypes": true,
    // "python.analysis.inlayHints.variableTypes": true,

    "explorer.confirmDelete": false,

    "security.workspace.trust.untrustedFiles": "open",

    "liveServer.settings.donotVerifyTags": true,

    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": true,
        "markdown": true,
        "python": true
    },

    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },

    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.formatOnType": true
    },
    "[dockercompose]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "[solidity]": {
        "editor.defaultFormatter": "NomicFoundation.hardhat-solidity"
    },

    "auto-rename-tag.activationOnLanguage": [
        "html",
        "xml",
        "php",
        "javascript"
    ],

    "tabnine.experimentalAutoImports": true,
    "sourcery.token": "1111111111111111111111",
    "sonarlint.ls.javaHome": "/usr/lib/jvm/java-20-openjdk/",
    "sonarlint.pathToNodeExecutable": "/bin/node",

    "git.autofetch": true,
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/CVS": true,
        "**/Thumbs.db": true
    },
    "git.openRepositoryInParentFolders": "always",

    "solidity.telemetry": false,
    "workbench.colorCustomizations": {},
    "docwriter.language": "Turkish"
}